set(TERRALIB_TERRAVIEW_ENABLED @TERRALIB_TERRAVIEW_ENABLED@)

set (TERRALIB_LIBRARIES)

set(TERRALIB_MOD_ADO_ENABLED @TERRALIB_MOD_ADO_ENABLED@)
set(TERRALIB_MOD_TERRALIB4_ENABLED @TERRALIB_MOD_TERRALIB4_ENABLED@)
set(TERRALIB_MOD_GDAL_ENABLED @TERRALIB_MOD_GDAL_ENABLED@)
set(TERRALIB_MOD_OGR_ENABLED @TERRALIB_MOD_OGR_ENABLED@)
set(TERRALIB_MOD_POSTGIS_ENABLED @TERRALIB_MOD_POSTGIS_ENABLED@)
set(TERRALIB_MOD_XERCES_ENABLED @TERRALIB_MOD_XERCES_ENABLED@)
set(Qt4_FOUND @Qt4_FOUND@)
set(Qt5_FOUND @Qt5_FOUND@)

if (TERRALIB_MOD_ADO_ENABLED)
  list(APPEND TERRALIB_LIBRARIES ${CMAKE_INSTALL_PREFIX}/bin/@CMAKE_SHARED_LIBRARY_PREFIX@terralib_mod_ado@CMAKE_SHARED_LIBRARY_SUFFIX@)
endif()

if (TERRALIB_MOD_TERRALIB4_ENABLED)
  list(APPEND TERRALIB_LIBRARIES ${CMAKE_INSTALL_PREFIX}/bin/@CMAKE_SHARED_LIBRARY_PREFIX@terralib_mod_terralib4@CMAKE_SHARED_LIBRARY_SUFFIX@)
endif()

if (TERRALIB_MOD_GDAL_ENABLED)
  list(APPEND TERRALIB_LIBRARIES ${CMAKE_INSTALL_PREFIX}/bin/@CMAKE_SHARED_LIBRARY_PREFIX@terralib_mod_gdal@CMAKE_SHARED_LIBRARY_SUFFIX@)
endif()

if (TERRALIB_MOD_OGR_ENABLED)
  list(APPEND TERRALIB_LIBRARIES ${CMAKE_INSTALL_PREFIX}/bin/@CMAKE_SHARED_LIBRARY_PREFIX@terralib_mod_ogr@CMAKE_SHARED_LIBRARY_SUFFIX@)
endif()

if (TERRALIB_MOD_POSTGIS_ENABLED)
  list(APPEND TERRALIB_LIBRARIES ${CMAKE_INSTALL_PREFIX}/bin/@CMAKE_SHARED_LIBRARY_PREFIX@terralib_mod_postgis@CMAKE_SHARED_LIBRARY_SUFFIX@)
endif()

if (TERRALIB_MOD_XERCES_ENABLED)
  list(APPEND TERRALIB_LIBRARIES ${CMAKE_INSTALL_PREFIX}/bin/@CMAKE_SHARED_LIBRARY_PREFIX@terralib_mod_xerces@CMAKE_SHARED_LIBRARY_SUFFIX@)
endif()

if(Qt4_FOUND)
  get_filename_component(qt_bin_path @QT_QMAKE_EXECUTABLE@ PATH)
  list(APPEND TERRALIB_DIRS ${qt_bin_path})
endif()

if(Qt5_FOUND)
  list(APPEND TERRALIB_DIRS @Qt5_DIR@/../../../bin)
endif()

if(WIN32)

  if(TERRALIB_TERRAVIEW_ENABLED)
    set(TERRALIB_APPLICATION "${CMAKE_INSTALL_PREFIX}/bin/terraview@CMAKE_EXECUTABLE_SUFFIX@")
  endif()

  foreach(LIBDIR @CMAKE_LIBRARY_PATH@)
    list(APPEND TERRALIB_DIRS ${LIBDIR}/lib)
  endforeach()

elseif(APPLE)

  if(TERRALIB_BUILD_TERRAVIEW)
    set(TERRALIB_APPLICATION "${CMAKE_INSTALL_PREFIX}/terraview.app/Contents/MacOS/terraview")
  endif()

  list(APPEND TERRALIB_DIRS "/usr/local/lib;/usr/lib")

endif()

file(GLOB_RECURSE QT_PLUGINS "${CMAKE_INSTALL_PREFIX}/qtplugins/*@CMAKE_SHARED_LIBRARY_SUFFIX@")

list(APPEND TERRALIB_LIBRARIES ${QT_PLUGINS})

include(BundleUtilities)

fixup_bundle("${TERRALIB_APPLICATION}" "${TERRALIB_LIBRARIES}" "${TERRALIB_DIRS}")
