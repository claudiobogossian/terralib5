set(TERRALIB_TERRAVIEW_ENABLED @TERRALIB_TERRAVIEW_ENABLED@)

if(WIN32)

  if(TERRALIB_TERRAVIEW_ENABLED)
    set(TERRALIB_APPLICATION "${CMAKE_INSTALL_PREFIX}/bin/terraview@CMAKE_EXECUTABLE_SUFFIX@")
    set(TERRALIB_LIBRARIES "${CMAKE_INSTALL_PREFIX}/bin/terralib_mod_xerces.dll")
  endif()

  set(TERRALIB_DIRS "C:/mydevel/terralib5-3rdparty-win32-qt5/lib")

elseif(APPLE)

  if(TERRALIB_BUILD_TERRAVIEW)
    set(TERRALIB_APPLICATION "${CMAKE_INSTALL_PREFIX}/terraview.app/Contents/MacOS/terraview")
  endif()

  set(TERRALIB_DIRS "/usr/local/lib;/usr/lib")

endif()

include(BundleUtilities)

fixup_bundle("${TERRALIB_APPLICATION}" "${TERRALIB_LIBRARIES}" "${TERRALIB_DIRS}")

