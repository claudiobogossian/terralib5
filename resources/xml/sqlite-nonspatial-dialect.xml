<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<QueryDialect xmlns:xlink="http://www.w3.org/1999/xlink"
              xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://www.terralib.org/dataaccess"
              xsd:schemaLocation="http://www.terralib.org/dataaccess ../../../../schemas/terralib/dataaccess/query_dialect.xsd"
              version="5.0.0-20110110">
  <DriverName>te.da.sqlite</DriverName>
  
  <Functions>
    <!-- arithmetic operators -->
    
    <Function name="+">
      <BinaryOpEncoder alias="+"/>
    </Function>
	
    <Function name="-">
      <BinaryOpEncoder alias="-"/>
    </Function>
	
    <Function name="*">
      <BinaryOpEncoder alias="*"/>
    </Function>
	
    <Function name="/">
      <BinaryOpEncoder alias="/"/>
    </Function>
    
    <!-- relational operators -->
	
    <Function name="=">
      <BinaryOpEncoder alias="="/>
    </Function>
	
    <Function name="&#60;&#62;">
      <BinaryOpEncoder alias="&#60;&#62;"/>
    </Function>
	
    <Function name="&#62;">
      <BinaryOpEncoder alias="&#62;"/>
    </Function>
	
    <Function name="&#60;">
      <BinaryOpEncoder alias="&#60;"/>
    </Function>
	
    <Function name="&#62;=">
      <BinaryOpEncoder alias="&#62;="/>
    </Function>
    
    <Function name="&#60;=">
      <BinaryOpEncoder alias="&#60;="/>
    </Function>
	
    <!-- logical operators -->
    
    <Function name="and">
      <BinaryOpEncoder alias="AND"/>
    </Function>
    
    <Function name="or">
      <BinaryOpEncoder alias="OR"/>
    </Function>
    
    <Function name="not">
      <UnaryOpEncoder alias="NOT"/>
    </Function>
	
    <!-- string operators -->
    
    <Function name="upper">
      <FunctionEncoder alias="upper"/>
    </Function>
	
    <Function name="lower">
      <FunctionEncoder alias="lower"/>
    </Function>
    
    <Function name="substr">
      <FunctionEncoder alias="substr"/>
    </Function>
    
    <Function name="trim">
      <FunctionEncoder alias="trim"/>
    </Function>
    
    <!-- aggregate operators -->
	
    <Function name="sum">
      <FunctionEncoder alias="SUM"/>
    </Function>
	
    <Function name="avg">
      <FunctionEncoder alias="AVG"/>
    </Function>
    
    <Function name="count">
      <FunctionEncoder alias="COUNT"/>
    </Function>
    
    <Function name="max">
      <FunctionEncoder alias="MAX"/>
    </Function>
    
    <Function name="min">
      <FunctionEncoder alias="MIN"/>
    </Function>
 
  </Functions>
</QueryDialect>